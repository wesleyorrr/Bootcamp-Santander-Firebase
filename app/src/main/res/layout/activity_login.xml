<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    tools:context=".activity.ActivityLogin">

    <ImageView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/toobarr"
        android:layout_margin="16dp"
        android:textSize="26dp" />



    <EditText
        android:id="@+id/editTextEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:drawablePadding="6dp"
        android:drawableLeft="@drawable/ic__email"
        android:background="@drawable/background_texto"
        android:textColorHint="@color/purple_700"
        android:textColor="@color/purple_700"
        android:ems="10"
        android:hint="Email"
        android:inputType="textWebEmailAddress|textPersonName" />

    <EditText
        android:id="@+id/editTextSenhaLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="@color/purple_700"
        android:textColor="@color/purple_700"
        android:background="@drawable/background_texto"
        android:hint="Senha"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="6dp"
        android:layout_marginBottom="15dp"
        android:inputType="textPersonName|textPassword" />

    <Button
        android:id="@+id/buttonAcessar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_botao"
        android:onClick="validarAutentificacao"
        android:text="Acessar"
        android:textColor="@color/purple_700" />

    <Button
        android:id="@+id/buttonCadastrese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:onClick="cadastrar"
        android:text="Cadastre-se"
        android:textColor="@color/white" />

</LinearLayout>